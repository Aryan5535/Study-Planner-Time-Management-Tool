<script>
const container = document.getElementById("assignmentsContainer");
const output = document.getElementById("output");
const schoolLevel = document.getElementById("schoolLevel");








const subjects = {
  middle:["Math","English","Science","Social Studies","PE/Health","Art/Music","Foreign Language"],
  high:["Math","English","Science","Social Studies","PE/Health","Art/Music","Foreign Language","Electives/Other"],
  college:["Arts & Humanities","STEM","Science","Computer Science","Astronomy","Environmental Science","Engineering","Business/Finance","Social Sciences","Health & Medicine","Education","Communication & Media","Other"]
};








const attentionBlocks = { middle:60, high:78, college:90 };
const difficultyRank = { priority:0, hard:1, medium:2, easy:3 }; // PRIORITY first
















function minutesToText(mins){
  const h = Math.floor(mins/60);
  const m = Math.round(mins%60);
  if(h===0) return `${m} minutes`;
  if(m===0) return `${h} hours`;
  return `${h} hours ${m} minutes`;
}
















// Add Assignment
document.getElementById("addAssignmentBtn").onclick = () => {
  const div = document.createElement("div");
  div.className = "assignment";
  div.innerHTML = `
    <label>Subject:</label>
    <select class="subject">${subjects[schoolLevel.value].map(s=>`<option>${s}</option>`).join("")}</select>
   <label>Estimated Completion Time:</label>
    <select class="time">
      <option value="10">10 minutes</option>
      <option value="30">30 minutes</option>
      <option value="60">1 hour</option>
      <option value="120">2 hours</option>
      <option value="180">3 hours</option>
    </select>
    <label>Difficulty:</label>
    <select class="difficulty">
      <option value="priority">Priority</option>
      <option value="easy">Easy</option>
      <option value="medium">Medium</option>
      <option value="hard">Hard</option>
    </select>
    <button class="removeBtn">Delete assignment</button>
  `;
  div.querySelector(".removeBtn").onclick = () => div.remove();
  container.appendChild(div);
  div.scrollIntoView({ behavior: 'smooth', block: 'center' });
};
















// Reset
document.getElementById("resetBtn").onclick = () => {
  container.innerHTML = "";
  output.innerHTML = "";
  document.getElementById("timelineBar").innerHTML = "";
  const oldDaysText = document.getElementById("daysText");
  if(oldDaysText) oldDaysText.remove();
};
















// Calculate
document.getElementById("calculateBtn").onclick = () => {
  const raw = [...container.querySelectorAll(".assignment")];
  if(!raw.length){
    output.textContent = "Please add at least one assignment.";
    return;
  }








  let assignments = raw.map(a => ({
    subject: a.querySelector(".subject").value,
    minutes: parseInt(a.querySelector(".time").value),
    difficulty: a.querySelector(".difficulty").value
  }));
























  assignments.sort((a,b)=>{
    if(difficultyRank[a.difficulty] !== difficultyRank[b.difficulty]){
      return difficultyRank[a.difficulty] - difficultyRank[b.difficulty];
    }
    return b.minutes - a.minutes;
  });
























  const block = attentionBlocks[schoolLevel.value];
  let dailyLimit = schoolLevel.value==="middle"?120: schoolLevel.value==="high"?180:240;








  let totalWork = assignments.reduce((s,a)=>s+a.minutes,0);
  let totalBreaks = 0;
  let cumulativeForTimeline = 0;
  let dayBoundaries = [];
  let day = 1;
  let dayCumulative = 0;
  let plan = `<b>Day ${day}:</b>\n\n`;








  assignments.forEach((a,idx)=>{
    let remaining = a.minutes;
    while(remaining>0){
      let untilBreak = block - (dayCumulative % block);
      let chunk = Math.min(remaining, untilBreak, dailyLimit - dayCumulative);








      plan += `${a.subject} (${a.difficulty}) — ${minutesToText(chunk)}`;
      dayCumulative += chunk;
      cumulativeForTimeline += chunk;
      remaining -= chunk;
















      if(dayCumulative % block === 0 && dayCumulative + 15 <= dailyLimit && (remaining>0 || idx<assignments.length-1)){
        plan += ", then a 15-minute break";
        dayCumulative += 15;
        cumulativeForTimeline += 15;
        totalBreaks += 15;
      }








      if(remaining>0) plan += ", then ";
















      if(dayCumulative >= dailyLimit && (remaining>0 || idx<assignments.length-1)){
        dayBoundaries.push(cumulativeForTimeline);
        day++;
        dayCumulative = 0;
        plan += `\n\n<b>Day ${day}:</b>\n\n`;
      }
    }
    plan += "\n\n";
  });
















  output.innerHTML =
`Total Work Time: ${minutesToText(totalWork)}
Total Break Time: ${minutesToText(totalBreaks)}
Total Time Required: ${minutesToText(totalWork + totalBreaks)}
















${plan}`;
















  const daysNeeded = Math.ceil(totalWork/dailyLimit);
  const daysText = document.createElement("div");
  daysText.style.fontSize = "18px";
  daysText.style.fontWeight = "bold";
  daysText.style.marginBottom = "8px";
  daysText.style.textAlign = "center";
  daysText.textContent = `You can finish your work in ${daysNeeded} school day${daysNeeded>1?"s":""}.`;
  daysText.id = "daysText";
















  const oldDaysText = document.getElementById("daysText");
  if(oldDaysText) oldDaysText.remove();
  const timelineContainer = document.getElementById("timelineContainer");
  timelineContainer.parentNode.insertBefore(daysText, timelineContainer);
















  renderTimeline(assignments, block, dayBoundaries, cumulativeForTimeline, dailyLimit);
// ... (existing calculation code above)
































  renderTimeline(assignments, block, dayBoundaries, cumulativeForTimeline, dailyLimit);
































  // ADD THIS LINE BELOW:
  output.scrollIntoView({ behavior: 'smooth', block: 'start' });
};
















// Timeline with day markers and breaks (fixed break placement)
function renderTimeline(assignments, block, dayBoundaries, totalTime, dailyLimit){
  const bar = document.getElementById("timelineBar");
  bar.innerHTML = "";
  let dayCumulative = 0;
  const colors = { priority:"#800080", hard:"#d9534f", medium:"#f0ad4e", easy:"#5cb85c", break:"#999" };
















  assignments.forEach((a,idx)=>{
    let remaining = a.minutes;
    while(remaining>0){
      let untilBreak = block - (dayCumulative % block);
      let chunk = Math.min(remaining, untilBreak, dailyLimit - dayCumulative);
















      const seg = document.createElement("div");
      seg.style.flex = chunk;
      seg.style.background = colors[a.difficulty] || "#5cb85c";
      bar.appendChild(seg);
















      dayCumulative += chunk;
      remaining -= chunk;
















      if(dayCumulative % block === 0 && dayCumulative + 15 <= dailyLimit && (remaining>0 || idx<assignments.length-1)){
        const breakSeg = document.createElement("div");
        breakSeg.style.flex = 15;
        breakSeg.style.background = colors.break;
        bar.appendChild(breakSeg);
        dayCumulative += 15;
      }
















      if(dayCumulative >= dailyLimit){
        dayCumulative = 0;
      }
    }
  });
  
  dayBoundaries.forEach((db,i)=>{
    const marker = document.createElement("div");
    marker.className = "dayMarker";
    marker.style.left = `${(db/totalTime)*100}%`;
    bar.appendChild(marker);
















    const label = document.createElement("div");
    label.className = "dayLabel";
    label.style.left = `${(db/totalTime)*100}%`;
    label.innerHTML = `<b>Day ${i+1}</b>`;
    bar.appendChild(label);
  });
}
















</script>
















</body>
</html>




























